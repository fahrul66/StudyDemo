<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context="com.work.wulei.myapplication.MainActivity">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:divider="@drawable/shape_divider"
            android:dividerPadding="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="middle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:elevation="20dp"
                android:src="@drawable/tm"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:src="@drawable/lufei" />

            <com.work.wulei.HelperUtils.BitmapCirImg
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/transparent"
                android:src="@drawable/tm" />

            <com.work.wulei.HelperUtils.BitmapCirImg
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                android:src="@drawable/lufei" />

            <com.work.wulei.HelperUtils.BitmapCirImg
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/tm"
                app:borderRadius="10dp"
                app:type="round" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e1e1e1" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:borderRadius="20dp"
                app:src="@drawable/lufei"
                app:type="round" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:id="@+id/MFCirImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:borderRadius="20dp"
                app:src="@drawable/lufei"
                app:type="circle" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                app:borderRadius="20dp"
                app:src="@drawable/lufei"
                app:type="circle" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                app:borderRadius="20dp"
                app:src="@drawable/lufei"
                app:type="round" />

            <com.work.wulei.HelperUtils.MFCirImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:borderRadius="20dp"
                app:src="@drawable/lufei"
                app:type="round" />
        </LinearLayout>
    </ScrollView>
</layout>

