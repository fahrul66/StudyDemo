<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/app_bar" />-->

    <com.wulei.runner.customView.ArcProgressBar
        android:id="@+id/arcProgressbar_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        app:angle="360"
        app:arcColor="@color/primary"
        app:bottomText="目标：5000"
        app:closable="true"
        app:currProgress="28"
        app:maxProgress="100"
        app:midTextColor="@color/primary"
        app:topText="今日已跑步数"
        app:topTextColor="@color/secondary_text" />

    <include layout="@layout/data_run" />

    <Button
        android:id="@+id/btn_start_run"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_run_tv"
        android:textColor="@color/text_light"
        android:textSize="@dimen/textView_appbar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_run"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        app:rippleColor="@color/green"
        android:layout_gravity="center"
        app:fabSize="normal" />

</LinearLayout>