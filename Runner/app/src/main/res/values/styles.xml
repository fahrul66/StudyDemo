<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:listDivider">@drawable/shape_list_divider</item>

    </style>

    <!--fullscreen-->
    <style name="startup" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="btn_login">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textView_large_title</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
