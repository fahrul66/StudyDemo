<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/steelBule"
                />
            <corners
                android:radius="20dp"
                />
            <stroke
                android:width="3dp"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
    <shape>
        <solid
            android:color="@color/skyBule"
            />
        <corners
            android:radius="20dp"
            />
        <stroke
            android:width="3dp"
            />
    </shape>
    </item>
</selector>